{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "removeComments": true,
        "declaration": true,
        "declarationDir": "./lib/types",
        "inlineSourceMap": true,
        "outDir": "./lib"
    },
    "include": [
        "src/Persistency.ts",
        "src/**/*.test.ts"
    ]
}